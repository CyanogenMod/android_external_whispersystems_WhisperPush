<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:key="pref_registration_category"
                        android:title="@string/pref_registration_category__title">
        <PreferenceScreen
            android:key="pref_register"
            android:title="@string/pref_register__title"
            android:summary="@string/pref_register__summary">

            <intent android:targetPackage="org.whispersystems.whisperpush"
                    android:targetClass="org.whispersystems.whisperpush.ui.RegistrationActivity"/>

        </PreferenceScreen>

        <PreferenceScreen
            android:key="pref_unregister"
            android:title="@string/pref_unregister__title"
            android:summary="@string/pref_unregister__summary"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_other_category__title">
        <PreferenceScreen
            android:title="@string/pref_my_identity__title">

            <intent android:targetPackage="org.whispersystems.whisperpush"
                    android:targetClass="org.whispersystems.whisperpush.ui.ViewMyIdentityActivity"/>

        </PreferenceScreen>
        <PreferenceScreen
            android:title="@string/pref_review_keys__title">

            <intent android:targetPackage="org.whispersystems.whisperpush"
                    android:targetClass="org.whispersystems.whisperpush.ui.ReviewIdentitiesActivity"/>

    </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>